<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

  <description>
    World Alive Servlet
  </description>
  <display-name>World Alive</display-name>

  <servlet>
    <servlet-name>WorldAlive</servlet-name>
    <servlet-class>com.alwaysrejoice.worldalive.WorldAliveServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WorldAlive</servlet-name>
    <url-pattern>/WorldAlive</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>com.alwaysrejoice.worldalive.WorldServletListener</listener-class>
  </listener>

</web-app>
